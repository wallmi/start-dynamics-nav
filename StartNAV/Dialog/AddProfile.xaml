<Window x:Class="StartNAV.Dialog.AddProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartNAV.Dialog"
        mc:Ignorable="d"
Title="Füge Profile hinzu" 
        WindowStyle="ToolWindow" 
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Text="Profil" Margin="5"/>
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Name="tb_profile" Width="150" Margin="5"
            />
        <Button
            Grid.Column="1"
            Grid.Row="1"
            Name="addprofile"
            Content="Add" Margin="5"
            Click="Addprofile_Click"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
