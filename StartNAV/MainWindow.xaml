<Window x:Class="StartNAV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartNAV"
        mc:Ignorable="d"
        Title="Start DynamicsNAV" 
        SizeToContent="WidthAndHeight" 
        ResizeMode="CanMinimize"
        Icon="favicon.ico"
        Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary>

     </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Menu
            Grid.Row="0"
            Grid.ColumnSpan="2">
            <MenuItem Header="_Datei">
                <MenuItem
                    Name="mi_save"
                    Header="_Save Settings"
                    Click="Mi_save_Click"
                    />
                <MenuItem 
                    Header="_Reset SettingsFile"
                    Click="B_delfile_Click" />
                <Separator></Separator>
                <MenuItem
                    Name="mi_close"
                    Header="_Beenden"
                    Click="Close_Click"
                    />
            </MenuItem>
            <MenuItem Header="_Server">
                <MenuItem 
                    Header="_Add"
                    Click="MenuItem_Click"/>
                <MenuItem
                    Header="_Lösche akt. Server"
                    Click="MenuItem_Click_1"/>
            </MenuItem>
            <MenuItem Header="Mandant">
                <MenuItem
                    Header="_Add"
                    Click="MenuItem_Click_3">
                </MenuItem>
                <MenuItem
                    Header="_Lösche akt. Mandant"
                    Click="MenuItem_Click_2"/>
            </MenuItem>
            <MenuItem Header="Profile">
                <MenuItem
                    Header="_Add"
                    Click="MenuItem_Click_4">
                </MenuItem>
                <MenuItem
                    Header="_Lösche akt. Profil"
                    Click="MenuItem_Click_5"/>
            </MenuItem>
        </Menu>
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2" 
            Margin="5,0,5,5">
            <TextBlock 
                Text="Server" FontWeight="Bold" Margin="0,5,0,0"
                />
            <ComboBox
                Name="cb_server"
                SelectionChanged="Cb_server_SelectionChanged"
                />
            <TextBlock 
                Text="Mandant" FontWeight="Bold" Margin="0,5,0,0"
                />
            <ComboBox
                Name="cb_mandant"
                 />
            <TextBlock
                Text="ObjektTyp" FontWeight="Bold" Margin="0,5,0,0"/>
            <ComboBox
                Name="cb_objektTyp"
                SelectionChanged="Cb_objektTyp_SelectionChanged"/>
            <TextBlock
                Text="Profil" FontWeight="Bold" Margin="0,5,0,0"/>
            <ComboBox
                Name="cb_profil" />
            <TextBlock
                Text="ObjectId" FontWeight="Bold" Margin="0,5,0,0"/>
                <Grid>
                    <TextBox
                        Name="tx_objId"
                        Grid.Column="0"
                        TextChanged="Tx_objId_TextChanged" />
                    <Button
                        Name="b_getId"
                        Click="B_getId_Click"
                        Grid.Column="1"
                        Content="..." Margin="0" Padding="5,1" FontWeight="Bold"/>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                </Grid>
                <TextBlock
                Text="Hier steht der Objektname"
                Name="tb_ObjektName"/>
            <TextBlock
                Text="Startoptionen" Margin="0,15,0,0" FontWeight="Bold" FontSize="16"/>

            <CheckBox
                Name="cbo_config"
                Content="Konfigurationsmodus"/>
            <CheckBox
                Name="cbo_debug"
                Content="Debug"/>
            <CheckBox
                Name="cbo_schow_startstring"
                Content="Zeige Startoptionen"/>

        </StackPanel>
        <Grid
            Grid.Row="2"
            Grid.Column="1">
            <StackPanel Margin="5,0,5,5">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Name="b_add_fav"
                        Content="Füge zu Favouriten hinzu"
                        Click="B_add_fav_Click" 
                        Margin="0,5,5,0" 
                        Padding="5" Width="138"/>
                    <Button
                        Name="b_get_favs"
                        Click="B_getId_Click"
                        Content="Aus Liste hinzufügen" 
                        Margin="0,5,0,0" 
                        />
                    <Button
                        Name="b_del_fav"
                        Content="Löschen Favoriten"
                        Click="B_del_fav_Click" 
                        Margin="5,5,0,0"/>
                </StackPanel>
                <Button
                    Name="b_start_nav"
                    Content="Start NAV" 
                    Click="B_StartNav_Click" 
                    Margin="0,5,0,0" 
                    Padding="5" 
                    IsDefault="True"/>
                <Button
                    Name="b_start_session_list"
                    Content="Session List" 
                    Click="B_start_session_list_Click" 
                    Margin="0,5,0,0" 
                    Padding="5" 
                    IsDefault="True"/>
            </StackPanel>
        </Grid>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1">
        </StackPanel>
        <ListView 
            Name="lv_fav"
            Width="Auto"
            Grid.Column="1"
            Grid.Row="1"
            MouseDoubleClick="Lv_fav_MouseDoubleClick" 
            Margin="5,0" 
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Typ"
                                    Width="50"
                                    DisplayMemberBinding="{Binding Typ}"/>
                    <GridViewColumn Header="ID"
                                    Width="50"
                                    DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="Name"
                                    Width="250"
                                    DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StatusBar
            Grid.Row="3"
            Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock
                    Width="Auto"
                    x:Name="tb_status"/>
            </StatusBarItem>
        </StatusBar>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
